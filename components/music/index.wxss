.container {
    width: 340rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.2);
    margin-bottom: 30rpx;
    background-color: #ffffff;
}

.info-container {
    display:flex;
    flex-direction:column;
    padding: 16rpx 16rpx 22rpx 16rpx;
}

.img {
    margin-top: 0;
    width: 100%;
    height: 340rpx;
}

.song-name {
    font-size: 28rpx;
    color: #333333;
}

.singer {
    background-color: #ffffff !important;
    color: #d13a31;
    height: 36rpx;
    padding-left: 6rpx !important;
    padding-right: 6rpx !important;
}

.description {
    font-size: 24rpx;
    font-weight: 300;
    margin-top: 6rpx;
    color: #888;
    align-items: center;
    justify-content: center;
}